@model Business.Model.Models.Article_S
@{
    ViewBag.Title = "查看文章";
    Layout = "~/Views/Shared/_Form.cshtml";
}
@section HeadContent{
    <script type="text/javascript">
        var CTRL = { art_parent: null, valform: null }
        $(function () {
            //获取父页面对象
            CTRL.art_parent = $.dialog.data("ParentWindow");
        });

    </script>
}
<div class="pop-page">
    <div class="formtitle">查看文章</div>
    <table class="tableread" cellpadding="0" cellspacing="0" border="0">
        <tr>
            <td class="table-title" style="width: 90px;">所属栏目：</td>
            <td class="table-value" style="width: 150px;">
                @Html.DisplayFor(c => c.VC_COLUMN_NAME)
            </td>
            <td class="table-title" style="width: 90px;">标题：</td>
            <td class="table-value" style="width: 150px;" colspan="3">
                @Html.DisplayFor(c => c.VC_TITLE)
            </td>
        </tr>
        <tr>
            <td class="table-title">关键字：</td>
            <td class="table-value">
                @Html.DisplayFor(c => c.VC_KEYWORDS)
            </td>
            <td class="table-title" style="width: 90px;">推荐级别：</td>
            <td class="table-value" style="width: 150px;">
                @Html.DisplayFor(c => c.VC_RECOMMEND_NAME)
            </td>
            <td class="table-title">是否图片新闻</td>
            <td class="table-value">@Html.DisplayFor(c => c.B_IMG_NEWS)</td>
        </tr>
        <tr>
            <td class="table-title" style="min-height: 300px">内容：</td>
            <td class="table-value" colspan="5" style="min-height: 300px">
                @Html.DisplayTextFor(c => c.VC_CONTENT)
            </td>
        </tr>
        <tr>
            <td class="table-title">编写者：</td>
            <td class="table-value">
                @Html.DisplayFor(c => c.VC_ADD_OP_NAME)
            </td>
            <td class="table-title" style="width: 90px;">编写时间：</td>
            <td class="table-value" style="width: 150px;">
                @Html.DisplayFor(c => c.DT_ADD_TIME)
            </td>
            <td class="table-title"></td>
            <td class="table-value"></td>
        </tr>
        <tr>
            <td class="table-title">最后修改者：</td>
            <td class="table-value">
                @Html.DisplayFor(c => c.VC_UPDATE_OP_NAME)
            </td>
            <td class="table-title" style="width: 90px;">最后修改时间：</td>
            <td class="table-value" style="width: 150px;">
                @Html.DisplayFor(c => c.DT_UPDATE_TIME)
            </td>
            <td class="table-title"></td>
            <td class="table-value"></td>
        </tr>
    </table>
</div>
<div class="pop-page-bar">
    <a title="返回" class="btn1" href="javascript:$.dialog.close();">返回<i></i></a>
</div>
